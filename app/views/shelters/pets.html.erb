<h1>Welcome to <%= @shelter.name %> Pets Page</h1>

<% @shelter.pets.each do |pet| %>
  <%= pet.image %>
  <h3>Name: <%= pet.name %></h3>
  <h3>Approximate Age: <%= pet.age %></h3>
  <h3>Sex: <%= pet.sex %></h3>
  <h3>Adoption Status: <%= pet.status %></h3>
<% end %>
<%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %>
